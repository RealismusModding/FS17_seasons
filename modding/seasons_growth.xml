<!--Sample seasons_growth.xml file to customise growth in maps
    This shows how to add a growth pattern for a new custom fruit
-->

<?xml version="1.0" encoding="utf-8" standalone="no" ?>

<growth overwrite="false"> <!--Leave as false, if you are only appending new fruits. If set to true, you must make sure to define the growth for all fruits. use growth.xml as a template -->
     <version>2</version> <!--needed for new file format -->
    <defaultFruits>
        <defaultFruit fruitName="newFruit" maxSprayGrowthState="4"/>
    </defaultFruits>
    <growthTransitions>
        <gt growthTransitionNum="1"> <!--late winter to early spring-->
            <fruit fruitName="newFruit"  incrementByOneRange="1-3"/>
        </gt>
        <gt growthTransitionNum="2"> <!--early spring to mid spring-->
            <fruit fruitName="newFruit"  incrementByOneRange="1-3"/>
        </gt>
        <gt growthTransitionNum="3"> <!--mid spring to late spring-->
            <fruit fruitName="newFruit"  incrementByOneRange="1-3"/>
        </gt>
        <gt growthTransitionNum="4"> <!--late spring to early summer-->
            <fruit fruitName="newFruit"  incrementByOneRange="1-4"/>
        </gt>
        <gt growthTransitionNum="5"> <!--early summer to mid summer-->
            <fruit fruitName="newFruit"  incrementByOneRange="2-5" setRange="1"  setTo="CUT"/>
        </gt>
        <gt growthTransitionNum="6"> <!--mid summer to late summer-->
            <fruit fruitName="newFruit"  incrementByOneRange="6" incrementByRange="3-5" incrementBy="2" setRange="1"  setTo="CUT"/>
        </gt>
        <gt growthTransitionNum="7"> <!--late summer to early autumn-->
            <fruit fruitName="newFruit"  incrementByOneRange="5-6" setRange="1"  setTo="CUT"/>
        </gt>
        <gt growthTransitionNum="8"> <!--early autumn to mid autumn-->
            <fruit fruitName="newFruit"  incrementByOneRange="1-6"/>
        </gt>
        <gt growthTransitionNum="9"> <!--mid autumn to late autumn-->
            <fruit fruitName="newFruit"  incrementByOneRange="1-2"/>
        </gt>
        <gt growthTransitionNum="10"> <!--late autumn to early winter-->
            <fruit fruitName="newFruit"  setRange="4-MAX"  setTo="WITHERED"/>
        </gt>
        <gt growthTransitionNum="11"/> <!--early winter to mid winter-->
        <gt growthTransitionNum="12"/> <!--mid winter to late winter-->
        <gt growthTransitionNum="FIRST_LOAD_TRANSITION">
            <fruit fruitName="newFruit" setRange="1-MAX" setTo="CUT"/>
        </gt>
    </growthTransitions>
    <germination>
        <fruit fruitName="newFruit" germinateTemp="5" />
    </germination>
</growth>


